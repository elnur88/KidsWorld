@model IEnumerable<KidsWorld.Models.Class.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><h4>Musteriler</h4></div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tarix</th>
                                <th>Ad</th>
                                <th>Seher</th>
                                <th>Poct indeksi</th>
                                <th>Mobil</th>
                                <th>Adres</th>
                                <th>Email</th>
                                <th>Pasword</th>
                                <th>Sil</th>
                                <th>Redakte et</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var k in Model)
                            {
                            <tr>
                                <td>@k.CustomerId</td>
                                <td>@k.RecordDate</td>
                                <td>@k.FullName</td>
                                <td>@k.City </td>
                                <td>@k.ZipCode</td>
                                <td>@k.Phone</td>
                                <td>@k.Adress</td>
                                <td>@k.Email</td>
                                <td>@k.Password</td>
                                <td><a href="/Customer/DeleteCustomer/@k.CustomerId" class="btn btn-success">Sil</a></td>
                                <td><a href="/Customer/FindCustomer/@k.CustomerId" class="btn btn-success">Redakte et</a></td>
                            </tr>
                            }
                            </tfoot>
                    </table>
                    <br />

                    <a href="/Customer/AddCustomer/" class="btn btn-primary">Musteri elave et</a>
                </div>
            </div>
        </div>
    </div>
</div><!-- End Row-->
