@model IEnumerable<KidsWorld.Models.Class.GoodsInfo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><h4>Məhsullar</h4></div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tarix</th>
                                <th>Adi</th>
                                <th>Melumat</th>
                                <th>Olcu</th>
                                <th>Reng</th>
                                <th>Say</th>
                                <th>Alis qiymeti</th>
                                <th>Satis qiymeti</th>
                                <th>Barkod</th>
                                <th>Kateqoriya</th>
                                <th>Sil</th>
                                <th>Redakte et</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var k in Model)
                            {
                                <tr>
                                    <td>@k.GoodsInfoId</td>
                                    <td>@k.RecordDate</td>
                                    <td>@k.Name</td>
                                    <td>@k.Description</td>
                                    <td>@k.Size</td>
                                    <td>@k.Color</td>
                                    <td>@k.Count</td>
                                    <td>@k.PurchasePrice</td>
                                    <td>@k.SalePrice</td>
                                    <td>@k.Barcode</td>
                                    <td>@k.Category.Name</td>
                                    <td><a href="/GoodsInfo/DeleteGoodsInfo/@k.GoodsInfoId" class="btn btn-success">Sil</a></td>
                                    <td><a href="/GoodsInfo/FindGoodsInfo/@k.GoodsInfoId" class="btn btn-success">Redaktə et</a></td>
                                </tr>
                            }
                            </tfoot>
                    </table>
                    <br />
                    <a href="/GoodsInfo/AddGoodsInfo" class="btn btn-primary">Əlavə et</a>
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>
</div><!-- End Row-->

<script src="~/Webx/assets/js/jquery.min.js"></script>
<script src="~/Webx/assets/js/popper.min.js"></script>
<script src="~/Webx/assets/js/bootstrap.min.js"></script>


<script>
    $(document).ready(function () {
        //Default data table

        var table = $('#example').DataTable({
            lengthChange: false,
            buttons: ['copy', 'excel', 'pdf', 'print', 'colvis']
        });

        table.buttons().container()
            .appendTo('#example_wrapper .col-md-6:eq(0)');

    });
</script>
