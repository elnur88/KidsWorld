@model IEnumerable<KidsWorld.Models.Class.Order>
@{
    ViewBag.Title = "TesdiqIndex";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header"><h4>Təsdiqlənmiş sifarişlər</h4></div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>FakturaId</th>
                                <th>Tarix</th>
                                <th>Say</th>
                                <th>Satış qiyməti</th>
                                <th>Toplam məbləğ</th>
                                <th>Şəhər</th>
                                <th>Poçt indeksi</th>
                                <th>Mobil</th>
                                <th>Ünvan</th>
                                <th>Email</th>
                                <th>Barkod</th>
                                <th>Sil</th>
                                <th>Sat</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var k in Model)
                            {
                                <tr>
                                    <td>@k.OrderId</td>
                                    <td>@k.FakturaId</td>
                                    <td>@k.RecordDate</td>
                                    <td>@k.Count</td>
                                    <td>@k.SalePrice</td>
                                    <td>@k.TotalPrice</td>
                                    <td>@k.City </td>
                                    <td>@k.ZipCode</td>
                                    <td>@k.Phone</td>
                                    <td>@k.Adress</td>
                                    <td>@k.Email</td>
                                    <td>@k.Barcode</td>
                                    <td><a href="/Order/DeleteOrder/@k.OrderId" class="btn btn-success">Sil</a></td>
                                    <td><a href="/Order/SaleOrder/@k.OrderId" class="btn btn-success">Sat</a></td>
                                </tr>
                            }
                            </tfoot>
                    </table>


                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>
</div><!-- End Row-->

<script src="~/Webx/assets/js/jquery.min.js"></script>
<script src="~/Webx/assets/js/popper.min.js"></script>
<script src="~/Webx/assets/js/bootstrap.min.js"></script>


<script>
    $(document).ready(function () {
        //Default data table

        var table = $('#example').DataTable({
            lengthChange: false,
            buttons: ['copy', 'excel', 'pdf', 'print', 'colvis']
        });

        table.buttons().container()
            .appendTo('#example_wrapper .col-md-6:eq(0)');

    });
</script>

